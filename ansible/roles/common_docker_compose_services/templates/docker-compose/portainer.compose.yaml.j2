services:
  portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer
    restart: unless-stopped

    ports:
      - "9000:9000"    # HTTP UI
      # - "9443:9443"    # HTTPS UI (recommended)

    volumes:
      - {{ portainer_data_dir }}:/data
      - /var/run/docker.sock:/var/run/docker.sock:ro

    security_opt:
      - no-new-privileges:true

