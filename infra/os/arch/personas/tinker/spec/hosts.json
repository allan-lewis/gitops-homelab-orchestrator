{
  "hosts": {
    "cujo": {
      "ip": "192.168.86.217",
      "ssh_user": "lab",
      "tags": ["orchestrator", "terraform", "arch", "tinker"],

      "terraform": {
        "cpu": 8,
        "memory_mb": 16384,
        "disk_gb": 128,
        "template_ref": "arch/tinker/stable",
        "node": "polaris",
        "ipconfig": "ip=192.168.86.217/24,gw=192.168.86.1"
      },

      "ansible": {
        "group_memberships": ["arch_tinker", "docker_compose_monitoring"],

        "vars": {
          "is_desktop_enabled": true,
          "arch_desktop_env": "gnome",
          "arch_desktop_display_manager": "auto",
          "arch_desktop_enable_bluetooth": true,
          "arch_desktop_enable_printing": false,
          "arch_desktop_extra_packages": []
        }
      }
    }
  },

  "ansible": {
    "all": {
      "vars": {
        "ansible_python_interpreter": "/usr/bin/python3"
      }
    },

    "groups": {
      "arch_tinker": {
        "vars": {
          "is_docker_enabled": true
         }
      }
    }
  }
}
